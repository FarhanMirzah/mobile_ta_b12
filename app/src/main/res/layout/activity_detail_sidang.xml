<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_sidang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSidangActivity">


    <ImageView
        android:id="@+id/accept"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:onClick="buttonAcc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <ImageView
        android:id="@+id/reject"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:onClick="buttonReject"
        android:contentDescription="@string/reject"
        app:layout_constraintBottom_toBottomOf="@+id/accept"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_cancel_24" />

    <ImageView
        android:id="@+id/gambarTA"
        android:layout_width="133dp"
        android:layout_height="185dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul_TA"
        app:srcCompat="@drawable/skripsi" />

    <TextView
        android:id="@+id/TextDetailTanggalSidang"
        android:layout_width="386dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:paddingLeft="20dp"
        android:text="Detail Sidang"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="Nama : Raihan Baik"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextDetailTanggalSidang" />

    <TextView
        android:id="@+id/NIM"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="NIM : 1911523002"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama" />


    <TextView
        android:id="@+id/jadwal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="Pukul : "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/lokasi"
        app:layout_constraintTop_toBottomOf="@+id/NIM" />

    <TextView
        android:id="@+id/lokasi"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="Lokasi : Ruang Sidang JSI"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jadwal" />

    <TextView
        android:id="@+id/pembimbing1"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="Pembimbing 1 : Husnil Kamil, MT"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lokasi" />

    <TextView
        android:id="@+id/pembimbing2"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="Pembimbing 2 : Ricky Akbar, M.Kom"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pembimbing1" />

    <TextView
        android:id="@+id/penguji"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="Penguji : Prof. Surya Afnarius"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pembimbing2" />

    <TextView
        android:id="@+id/judul_TA"
        android:layout_width="385dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="20dp"
        android:text="Judul TA : SPK Pemilihan Laptop Terbaik"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/penguji" />

    <TextView
        android:id="@+id/jam"
        android:layout_width="314dp"
        android:layout_height="0dp"
        android:background="@android:drawable/status_bar_item_app_background"
        android:text="09.00 WIB"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/jadwal"
        app:layout_constraintEnd_toEndOf="@+id/NIM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/jadwal"
        app:layout_constraintTop_toTopOf="@+id/jadwal"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>